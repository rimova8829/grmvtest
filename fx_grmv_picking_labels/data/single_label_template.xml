<odoo>

    <template id="picking_single_label_template">
        <t t-call="web.html_container">
          <t t-set="data_report_margin_top" t-value="8"/>
          <t t-set="data_report_header_spacing" t-value="1"/>
            <t t-foreach="lines" t-as="line">
              <div class="page">
                  <table style="width: 48mm; height: 38mm; text-align:left; border: 1px solid black; padding-left: 0px;font-size:5px">
                      <tr>
                          <td>
                            <div class="row">
                              <span>P/N:</span>
                              <span t-esc="line['pn']"/>
                            </div>
                          </td>
                      </tr>
                      <tr>
                          <td>
                            <div class="row">
                              <span>PO:</span>
                              <span t-esc="line['mo']"/>
                            </div>
                          </td>
                      </tr>
                      <tr>
                          <td>
                            <div class="row">
                              <span>Cantidad:</span>
                              <span t-esc="1"/>
                            </div>
                          </td>
                      </tr>
                      <tr>
                          <td>
                            <div class="row">
                              <span>Lote:</span>
                              <span t-esc="line['lot']"/>
                            </div>
                          </td>
                      </tr>
                      <tr>
                          <td>
                            <div class="row">
                              <span>Liberado por:</span>
                              <span t-esc="line['qa']"/>
                            </div>
                          </td>
                      </tr>
                      <tr>
                          <td>
                            <div class="row">
                              <span>Ubicación destino:</span>
                              <span t-esc="line['storage_location']"/>
                            </div>
                          </td>
                      </tr>
                      <tr>
                          <td>
                            <div class="row">
                              <span>Fecha fabricación:</span>
                              <span t-esc="line['mo_date']"/>
                            </div>
                          </td>
                      </tr>
                      <tr>
                          <td>
                            <div class="row">
                              <span>Conteo:</span>
                              <span t-esc="line['count']"/>
                            </div>
                          </td>
                      </tr>
                  </table>
                  <p style="page-break-before:always;"> </p>
              </div>
            </t>    
        </t>
    </template>

    <!-- <report id="stock_single_label"
        model="stock.picking"
        string="Etiqueta indivivual"
        report_type="qweb-pdf"
        name="fx_grmv_picking_labels.picking_single_label_template"
        file="fx_grmv_picking_labels.picking_single_label_template"/> -->

    <record id="stock_single_label" model="ir.actions.report">
        <field name="name">Etiqueta indivivual</field>
        <field name="model">stock.picking</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">fx_grmv_picking_labels.picking_single_label_template</field>
        <field name="report_file">fx_grmv_picking_labels.picking_single_label_template</field>
        <field name="binding_model_id" ref="stock.model_stock_picking"/>
        <field name="binding_type">report</field>
    </record>
        
</odoo>